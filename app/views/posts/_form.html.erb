  <div class="row">
    <div class="col-sm-12 col-md-8 col-md-offset-2">
      <h1><%= form_title %></h1>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el tÃ­tulo del post" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control input-lg", placeholder: "Ingresa el contenido del post" %>
        </div>
        <%= f.hidden_field :user_id, { :value => current_user.id } %>
        <div>
          <%= f.submit form_title, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>