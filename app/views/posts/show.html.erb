<div class="row margin-bottom-50">
  <div class="col-sm-12 col-md-8 col-md-offset-2">
    <%= link_to "Volver", root_path %>
    <h1 class="margin-bottom-30"><%= @post.title %></h1>
    
    <%= markdown(@post.body) %>

    <% @post.comments.each do |comment| %>
    <div class="panel panel-default margin-top-30">
      <div class="panel-heading"><%= comment.user.email %> coment√≥ hace <%= time_ago_in_words(comment.created_at) %></div>
      <div class="panel-body">
        <%= comment.body %>
      </div>
    </div>
    <% end %>

    <% if user_signed_in? %>
      <%= form_for [@post, @post.comments.build] do |f| %>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", placeholder: "Agregar comentario" %>
        </div>

        <div class="actions">
          <%= f.submit "Comentar", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>